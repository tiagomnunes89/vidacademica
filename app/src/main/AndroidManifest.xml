<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="online.vidacademica">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".view.ui.PreLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.ListMyTestsActivity"
            android:label="@string/title_activity_list_my_tests"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.ui.MyScoresActivity">
        </activity>
        <activity
            android:name=".view.ui.CreateRegistrationActivity">

        </activity>

        <activity android:name=".view.ui.ListMySubjectsActivity">

        </activity>
        <activity
            android:name=".view.ui.CreateTestActivity"
            android:label="@string/title_activity_creste_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ui.ListMyCoursesActivity"
            android:label="Meus Cursos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.ui.ProfileActivity" />
        <activity
            android:name=".view.ui.CreateSubjectActivity"
            android:label="@string/title_activity_create_subject"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ui.RegisterActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name=".view.ui.HomeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".view.ui.LoginActivity"
            android:configChanges="orientation|screenSize" />

    </application>

</manifest>