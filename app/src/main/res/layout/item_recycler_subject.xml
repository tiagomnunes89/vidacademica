<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/semi_short_size"
        android:layout_marginTop="@dimen/default_size">

        <TextView
            android:id="@+id/item_titulo_materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/item_recicler_titulo_materia"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/item_data_periodo_materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/item_periodo_date"
            android:textColor="@android:color/black"
            android:gravity="end"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_red"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/little_size"
        android:layout_marginTop="@dimen/little_size"></ImageView>

</FrameLayout>