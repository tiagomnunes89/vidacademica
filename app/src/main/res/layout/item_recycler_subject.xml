<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_size"
        android:background="@drawable/border_item_white"
        android:orientation="horizontal"
        android:padding="@dimen/semi_short_size">

        <TextView
            android:id="@+id/item_titulo_materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/item_recycler_title_subject"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/item_data_periodo_materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="@string/item_period_date"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/little_size"
        android:layout_marginEnd="@dimen/little_size"
        android:src="@drawable/ic_red"
        android:contentDescription="@string/red_ball" />

</FrameLayout>